# Environment variables for Azure deployment
# Copy this file to .env and update with your values

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=asmeranda-ml-rg
AZURE_LOCATION=eastus

# Container Registry
AZURE_CONTAINER_REGISTRY=asmerandacr
AZURE_CONTAINER_REGISTRY_USERNAME=your-acr-username
AZURE_CONTAINER_REGISTRY_PASSWORD=your-acr-password

# Container App Configuration
CONTAINER_APP_NAME=asmeranda-ml-app
CONTAINER_APP_ENVIRONMENT=asmeranda-container-env
CONTAINER_APP_PORT=8501
CONTAINER_APP_CPU=2.0
CONTAINER_APP_MEMORY=4Gi
CONTAINER_APP_MIN_REPLICAS=1
CONTAINER_APP_MAX_REPLICAS=5

# Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=models
AZURE_STORAGE_ACCOUNT_NAME=asmerandasa

# Key Vault Configuration
AZURE_KEY_VAULT_NAME=asmeranda-kv
AZURE_KEY_VAULT_URL=https://asmeranda-kv.vault.azure.net/

# Application Settings
SUPER_ADMIN_USER=superadmin
SUPER_ADMIN_PASS=Admin@12345
SUPER_ADMIN_EMAIL=admin@local

# SMTP Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Database Configuration (Optional)
DATABASE_URL=sqlite:///users.db
POSTGRES_HOST=asmeranda-postgres.postgres.database.azure.com
POSTGRES_PORT=5432
POSTGRES_DB=asmeranda_db
POSTGRES_USER=asmeranda_user
POSTGRES_PASSWORD=your-postgres-password

# Monitoring and Logging
APPLICATION_INSIGHTS_INSTRUMENTATION_KEY=your-app-insights-key
LOG_ANALYTICS_WORKSPACE_ID=your-log-analytics-workspace-id

# Security Settings
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# Performance Settings
STREAMLIT_SERVER_MAX_UPLOAD_SIZE=500
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true
STREAMLIT_SERVER_FILE_WATCHER_TYPE=none

# Feature Flags
ENABLE_SMTP=false
ENABLE_EXTERNAL_STORAGE=false
ENABLE_DATABASE_MIGRATION=false
ENABLE_ADVANCED_MONITORING=true